<UserControl
    x:Class="RiotAccounts.components.accountcomponent.accountcard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RiotAccounts.components.accountcomponent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="218" Margin="5"
    Height="94"
    mc:Ignorable="d">
    <Border x:Name="BorderMain" Background="#33000000" Cursor="Hand" CornerRadius="5" MouseDown="Border_MouseDown">
        <Label
            x:Name="RiotTagInput"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            Content="{Binding RiotTag}"
            FontSize="15"
            Foreground="{DynamicResource Foreground}" />
        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="RiotTagInput"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.2" />
                        <ColorAnimation
                            Storyboard.TargetName="BorderMain"
                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            To="#ff5050"
                            Duration="0:0:0.2" />
                    </Storyboard>
                </BeginStoryboard>
               
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="RiotTagInput"
                            Storyboard.TargetProperty="Opacity"
                            To="0.5"
                            Duration="0:0:0.2" />
                        <ColorAnimation
                            Storyboard.TargetName="BorderMain"
                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            To="#33000000"
                            Duration="0:0:0.2" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
    </Border>
</UserControl>
