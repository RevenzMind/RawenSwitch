<Window
    x:Class="RiotAccounts.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RiotAccounts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:routes="clr-namespace:RiotAccounts.routes"
    Title="Rawen Switcher"
    Width="750"
    Height="500"
    AllowsTransparency="True"
    Background="{x:Null}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="{DynamicResource Background}"
            BorderBrush="{DynamicResource border}"
            BorderThickness="1"
            CornerRadius="7">

            <Grid x:Name="MainApp">
                <Grid
                    x:Name="Controlbox"
                    Height="50"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    MouseDown="MoveApp">
                    <Grid>
                        <Image
                            Width="auto"
                            Height="20"
                            Margin="15,0,0,0"
                            HorizontalAlignment="Left"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/assets/Logo.png" />
                        <Label
                            Margin="40,0,0,0"
                            VerticalAlignment="Center"
                            Content="RawenSwitch "
                            FontFamily="{DynamicResource Inter}"
                            FontSize="13"
                            Foreground="White" />

                    </Grid>
                    <Button
x:Name="selacc"
VerticalAlignment="Center"
HorizontalAlignment="Right" Margin="0,0,150,0"
Content="Selected Account "
                        Height="30" 
FontFamily="{DynamicResource Inter}"
FontSize="13"
Foreground="{DynamicResource Foreground}" Style="{DynamicResource ButtonPlay}" Background="#FFF9474B" Width="175" />
                    <Grid Width="150" HorizontalAlignment="Right">

                        <Button
                            Width="50"
                            HorizontalAlignment="Right"
                            Click="CloseApp"
                            Content="&#xE8BB;"
                            Style="{DynamicResource buttons-controlbox}" />
                        <Button
                            Width="50"
                            Margin="0,0,50,0"
                            HorizontalAlignment="Right"
                            Content="&#xE922;"
                            IsEnabled="False"
                            Style="{DynamicResource buttons-controlbox}" />
                        <Button
                            Width="50"
                            Margin="0,0,100,0"
                            HorizontalAlignment="Right"
                            Click="MinimizeApp"
                            Content="&#xE921;"
                            Style="{DynamicResource buttons-controlbox}" />
                    </Grid>

                </Grid>
                <Grid x:Name="AppContent" Margin="0,50,0,0">
                    <Grid
                        x:Name="SideBar"
                        Width="50"
                        HorizontalAlignment="Left">

                        <Border
                            x:Name="current"
                            Width="3"
                            Height="30"
                            Margin="2,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="{DynamicResource ForegroundSelected}"
                            CornerRadius="2" />

                        <Button
                            x:Name="mainswitch"
                            Height="50"
                            VerticalAlignment="Top"
                            Click="mainswitch_Click"
                            Content=""
                            Foreground="{DynamicResource ForegroundSelected}"
                            Style="{DynamicResource SidebarButton}" />
                        <Button
                            x:Name="settingswitch"
                            Height="50"
                            Margin="0,50,0,0"
                            VerticalAlignment="Top"
                            Click="settingswitch_Click"
                            Content=""
                            Foreground="{DynamicResource ForegroundUnselected}"
                            Style="{DynamicResource SidebarButton}" />
                    </Grid>
                    <Frame
                        x:Name="MainFrame"
                        Margin="50,0,0,0"
                        NavigationUIVisibility="Hidden"
                        Source="/routes/accountsmanager.xaml" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
